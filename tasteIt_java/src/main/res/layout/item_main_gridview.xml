<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPhotoRecipe"
        android:layout_width="193dp"
        android:layout_height="193dp"
        android:layout_margin="2dp"
        android:layout_marginStart="4dp"
        android:adjustViewBounds="true"
        android:background="@color/maroon"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/ivPhotoRecipe"
        app:layout_constraintEnd_toEndOf="@+id/ivPhotoRecipe"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivPhotoRecipe"
        app:layout_constraintVertical_bias="0.948">

        <TextView
            android:id="@+id/tvRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toEndOf="@+id/ivPhotoRecipe"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvNameCreator"
            android:layout_width="118dp"
            android:layout_height="20dp"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="72dp"
            android:text="Name Creator"
            app:layout_constraintEnd_toEndOf="@+id/tvDescriptionRecipe"
            app:layout_constraintTop_toBottomOf="@+id/tvNameRecipe" />

        <TextView
            android:id="@+id/tvDescriptionRecipe"
            android:layout_width="192dp"
            android:layout_height="116dp"
            android:layout_marginTop="12dp"

            android:text="@string/lorem_ipsum"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNameCreator" />

        <TextView
            android:id="@+id/tvNameRecipe"
            android:layout_width="118dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"

            android:text="Recipe Name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>