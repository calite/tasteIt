<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityTerms"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/toolbar_terms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/tvTermsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bar_title_terms"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:background="@color/gray"
        />

    <TextView
        android:id="@+id/tvTerms1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms1"
        android:textSize="12sp"
        android:justificationMode="inter_word"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/tvTerms2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms2"
        android:textSize="12sp"
        android:justificationMode="inter_word"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp" />

    <TextView
        android:id="@+id/tvTerms3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/terms3"
        android:textSize="12sp"
        android:justificationMode="inter_word"
        android:layout_marginTop="20dp"
        android:layout_margin="8dp" />



</LinearLayout>